# =============================================================================
# SentiBridge Contracts - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env files with real private keys!
# =============================================================================

# -----------------------------------------------------------------------------
# Deployer Configuration
# -----------------------------------------------------------------------------

# Private key for deployment (without 0x prefix)
# WARNING: Use a dedicated deployment wallet, not your main wallet!
# For production: Use hardware wallet or secure key management
PRIVATE_KEY=

# Operator address for daily sentiment updates (can be hot wallet)
OPERATOR_ADDRESS=

# Admin multisig address for production (Gnosis Safe recommended)
# Leave empty for development to use deployer as admin
ADMIN_MULTISIG=

# -----------------------------------------------------------------------------
# Network RPC URLs
# -----------------------------------------------------------------------------

# Local development
LOCAL_RPC_URL=http://localhost:8545

# Polygon Amoy Testnet
# Get free API keys from: https://www.alchemy.com/ or https://www.infura.io/
AMOY_RPC_URL=https://polygon-amoy.g.alchemy.com/v2/YOUR_API_KEY

# Polygon Mainnet (for production)
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Ethereum Mainnet (if deploying to Ethereum)
ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# -----------------------------------------------------------------------------
# Block Explorer API Keys (for contract verification)
# -----------------------------------------------------------------------------

# Polygonscan: https://polygonscan.com/apis
POLYGONSCAN_API_KEY=

# Etherscan: https://etherscan.io/apis
ETHERSCAN_API_KEY=

# -----------------------------------------------------------------------------
# Production Deployment Configuration
# -----------------------------------------------------------------------------

# Timelock delay in seconds (default: 172800 = 48 hours)
# Use shorter delays for testnet (e.g., 3600 = 1 hour)
TIMELOCK_DELAY=172800

# Initial update fee in wei (default: 0)
INITIAL_FEE=0

# Whether to enable token whitelist on deployment
ENABLE_WHITELIST=true

# -----------------------------------------------------------------------------
# Fork Testing Configuration
# -----------------------------------------------------------------------------

# Block number to fork from (leave empty for latest)
FORK_BLOCK_NUMBER=

# Enable fork caching
FORK_CACHE=true
