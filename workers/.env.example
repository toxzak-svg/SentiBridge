# Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============ Environment ============
ENVIRONMENT=development
LOG_LEVEL=INFO

# ============ Database ============
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/sentibridge
REDIS_URL=redis://localhost:6379/0

# ============ Social Media APIs ============
# Twitter API v2 (Essential or Elevated access)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret

# Discord Bot
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_GUILD_IDS=123456789,987654321

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_IDS=-1001234567890,-1009876543210

# ============ Blockchain ============
# Polygon RPC (use a reliable provider like Alchemy, Infura, or QuickNode)
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/your_api_key
POLYGON_AMOY_RPC_URL=https://polygon-amoy.g.alchemy.com/v2/your_api_key

# Oracle Contract Address
ORACLE_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Oracle Operator Private Key
# WARNING: In production, use AWS KMS or HashiCorp Vault instead!
# ORACLE_PRIVATE_KEY=0x...

# ============ AWS (Production) ============
AWS_REGION=us-east-1
AWS_SECRETS_ARN=arn:aws:secretsmanager:us-east-1:123456789012:secret:sentibridge/production

# KMS Key for signing (production)
AWS_KMS_KEY_ID=arn:aws:kms:us-east-1:123456789012:key/12345678-1234-1234-1234-123456789012

# ============ Monitoring ============
SENTRY_DSN=
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
